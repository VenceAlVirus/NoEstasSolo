<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        style="@style/autoAdjustImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/new_banner"
        app:layout_constraintBottom_toTopOf="@id/glh3"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvTitle"
        style="@style/text.text_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Fuente"
        app:layout_constraintBottom_toTopOf="@id/tvNewDetail"
        app:layout_constraintTop_toBottomOf="@id/glh3" />


    <TextView
        android:id="@+id/tvNewDetail"
        style="@style/text.text_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/loremp_long"
        app:layout_constraintBottom_toTopOf="@id/tvDate"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />


    <TextView
        android:id="@+id/tvDate"
        style="@style/text.text_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:drawableLeft="@drawable/ic_date"
        android:gravity="center"
        android:text="19 de diciembre de 2019, 17:00h"
        app:layout_constraintBottom_toTopOf="@id/btnOpenweb"
        app:layout_constraintTop_toBottomOf="@id/tvNewDetail" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOpenweb"
        style="@style/button.red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Visitar pÃ¡gina web"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".3" />

</androidx.constraintlayout.widget.ConstraintLayout>